<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:weightSum="7.43"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="co.koriel.yonapp.fragment.NoticeContentFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:id="@+id/notice_content_title" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:background="@drawable/textview_shadow"
        android:id="@+id/notice_content_date" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="0dp"
        android:paddingTop="10dp">


        <TextView
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:textColor="#000000"
            android:autoLink="web"
            android:layout_height="match_parent"
            android:id="@+id/notice_content" />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:paddingTop="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="10sp"
        android:autoLink="web"
        android:id="@+id/notice_content_attachment" />
    </ScrollView>

</LinearLayout>

