<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeLinearLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/fragment_home_padding"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                app:srcCompat="@drawable/ic_chat_black_48dp"
                android:background="@null"
                android:scaleType="centerInside"
                android:id="@+id/one_line_board_button" />

            <TextView
                android:text="@string/home_menu_oneline"
                android:layout_weight="0.2"
                android:textSize="@dimen/fragment_home_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView"
                android:gravity="center_horizontal"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/fragment_home_padding"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                app:srcCompat="@drawable/ic_cloud_download_black_48dp"
                android:scaleType="centerInside"
                android:id="@+id/solution_cloud_button" />

            <TextView
                android:text="@string/home_menu_solution_cloud"
                android:layout_weight="0.2"
                android:textSize="@dimen/fragment_home_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView2"
                android:gravity="center_horizontal"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/fragment_home_padding"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                app:srcCompat="@drawable/ic_date_range_black_48dp"
                android:scaleType="centerInside"
                android:id="@+id/school_calendar_button" />

            <TextView
                android:text="@string/home_menu_school_schedule"
                android:layout_weight="0.2"
                android:textSize="@dimen/fragment_home_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView3"
                android:gravity="center_horizontal"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/fragment_home_padding"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                app:srcCompat="@drawable/ic_book_black_48dp"
                android:scaleType="centerInside"
                android:id="@+id/book_search_button" />

            <TextView
                android:text="@string/home_menu_book_search"
                android:layout_weight="0.2"
                android:textSize="@dimen/fragment_home_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView4"
                android:gravity="center_horizontal"
                android:clickable="false"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/fragment_home_padding"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageButton
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            app:srcCompat="@drawable/ic_directions_bus_black_48dp"
            android:scaleType="centerInside"
            android:id="@+id/bus_button" />

        <TextView
            android:text="@string/home_menu_shuttle"
            android:layout_weight="0.2"
            android:textSize="@dimen/fragment_home_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/textView5"
            android:gravity="center_horizontal"
            android:clickable="false"/>
            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/fragment_home_padding"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                app:srcCompat="@drawable/ic_store_black_48dp"
                android:scaleType="centerInside"
                android:id="@+id/convenience_button" />

            <TextView
                android:text="@string/home_menu_convenience"
                android:layout_weight="0.2"
                android:textSize="@dimen/fragment_home_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView6"
                android:gravity="center_horizontal"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/fragment_home_padding"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                app:srcCompat="@drawable/ic_restaurant_menu_black_48dp"
                android:scaleType="centerInside"
                android:id="@+id/menu_button" />

            <TextView
                android:text="@string/home_menu_menu"
                android:layout_weight="0.2"
                android:textSize="@dimen/fragment_home_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView7"
                android:gravity="center_horizontal"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/fragment_home_padding"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                app:srcCompat="@drawable/ic_school_black_48dp"
                android:scaleType="centerInside"
                android:id="@+id/paper_button" />

            <TextView
                android:text="@string/home_menu_paper_search"
                android:layout_weight="0.2"
                android:textSize="@dimen/fragment_home_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView8"
                android:gravity="center_horizontal"
                android:clickable="false"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/fragment_home_padding"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                app:srcCompat="@drawable/ic_exit_to_app_black_48dp"
                android:scaleType="centerInside"
                android:id="@+id/logout_button" />

            <TextView
                android:text="@string/home_menu_logout"
                android:layout_weight="0.2"
                android:textSize="@dimen/fragment_home_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView9"
                android:gravity="center_horizontal"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/fragment_home_padding"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                app:srcCompat="@drawable/ic_settings_black_48dp"
                android:scaleType="centerInside"
                android:id="@+id/settings_button" />

            <TextView
                android:text="@string/home_menu_settings"
                android:layout_weight="0.2"
                android:textSize="@dimen/fragment_home_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView10"
                android:gravity="center_horizontal"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/fragment_home_padding"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                app:srcCompat="@drawable/ic_help_outline_black_48dp"
                android:scaleType="centerInside"
                android:id="@+id/about_button" />

            <TextView
                android:text="@string/home_menu_about"
                android:layout_weight="0.2"
                android:textSize="@dimen/fragment_home_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView11"
                android:gravity="center_horizontal"
                android:clickable="false"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/fragment_home_padding"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>
</LinearLayout>