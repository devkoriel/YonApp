<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/book_search_view_linear"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_bar_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Spinner
            android:theme="@style/LibrarySearchTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/book_search_spinner"
            android:entries="@array/book_search_option"/>

        <android.support.v7.widget.SearchView
        android:theme="@style/SearchViewStyle"
        android:id="@+id/book_search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/book_search_header_view"
        android:layout_below="@id/book_search_view_linear"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_bar_background">
        <TextView
            android:id="@+id/book_search_num"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_background"
            android:gravity="center_horizontal"/>
    </LinearLayout>

        <ListView
            android:id="@+id/book_search_list"
            android:layout_below="@id/book_search_header_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
</RelativeLayout>