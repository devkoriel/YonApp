<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_weight="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/comment_content_date_and_id_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/top_bar_background">
        <TextView
            android:id="@+id/comment_content_date_and_id"
            android:textSize="10dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_background"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_content_layout"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/main_background"
        android:layout_below="@id/comment_content_date_and_id_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/comment_content"
            android:textColor="#000000"
            android:minHeight="50dp"
            android:autoLink="all"
            android:linksClickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/comment_count_layout"
        android:orientation="vertical"
        android:layout_below="@id/comment_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/top_bar_background">
        <TextView
            android:id="@+id/comment_count"
            android:textColor="@color/main_background"
            android:layout_margin="5dp"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment_count_layout"
        android:layout_above="@+id/one_line_board_comment_post_layout">
        <android.support.v4.widget.SwipeRefreshLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe_refresh_layout_one_line">

            <ScrollView
                android:id="@+id/oneline_board_comment_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fillViewport="true">

                <ListView
                    android:id="@+id/oneline_board_comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/one_line_board_comment_post_layout"
        android:orientation="horizontal"
        android:background="@color/main_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!-- ID Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="200"
                android:hint="댓글"
                android:imeOptions="actionDone"
                android:textSize="15dp"
                android:id="@+id/oneline_board_comment_edittext"
                android:layout_gravity="center_vertical"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/oneline_board_comment_post_button"
            android:text="달기"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:background="@color/top_bar_background"
            android:textColor="@color/main_background"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"/>



    </LinearLayout>

</RelativeLayout>